{
  "manifest_version": 3,
  "name": "네이버 마케팅 프록시 (Naver Marketing Proxy)",
  "version": "1.0.0",
  "description": "보험 설계사를 위한 네이버 마케팅 프록시 제어 확장 프로그램. 보안 프로그램 충돌 없이 안전한 한국 IP로 네이버 활동을 지원합니다.",
  "author": "Insurance Content Master",
  
  "permissions": [
    "proxy",
    "storage",
    "alarms"
  ],
  
  "host_permissions": [
    "*://*.naver.com/*",
    "*://naver.com/*"
  ],
  
  "externally_connectable": {
    "matches": [
      "https://insurance-content-master.pages.dev/*",
      "https://*.insurance-content-master.pages.dev/*",
      "http://localhost:3000/*",
      "http://127.0.0.1:3000/*"
    ]
  },
  
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_title": "네이버 마케팅 프록시"
  },
  
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
